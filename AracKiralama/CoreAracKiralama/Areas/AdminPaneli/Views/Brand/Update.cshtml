@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CoreAracKiralama.Models.Brand

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Marka Güncelleme Sayfası</h1>

<form asp-action="Update" asp-controller="Brand" method="post" class="form-group">
    <input type="text" class="form-control" hidden asp-for="BrandId" />
    <label>@Html.DisplayNameFor(model => model.BrandName)</label>
    <input type="text" class="form-control" asp-for="BrandName" />
    @Html.ValidationMessageFor(x => x.BrandName, "", new { @style = "color:red" })
    <br />
    <label>@Html.DisplayNameFor(model => model.BrandDescription)</label>
    <input type="text" class="form-control" asp-for="BrandDescription" />
    <br />
    <label>Marka Vitrinde Gözüksün ?</label>
    <select asp-for="BrandStatus" class="form-control">
        <option class="form-control" value="True">Evet</option>
        <option class="form-control" value="False">Hayır</option>
    </select>
    <br />
    <button class="btn btn-block btn-primary">Güncelle</button>
</form>

