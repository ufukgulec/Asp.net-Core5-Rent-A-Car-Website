@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CoreAracKiralama.Models.Company
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Firma Güncelleme Sayfası</h1>
<form asp-action="Update" asp-controller="Company" method="post" class="form-group" enctype="multipart/form-data">
    <input type="text" hidden class="form-control" asp-for="CompanyId" />
    <input type="text" hidden class="form-control" asp-for="CompanyLogoUrl" />
    <label>@Html.DisplayNameFor(model => model.CompanyName)</label>
    <input type="text" class="form-control" asp-for="CompanyName" required />
    <br />
    <label>@Html.DisplayNameFor(model => model.CompanyAddress)</label>
    <input type="text" class="form-control" asp-for="CompanyAddress" />
    <br />
    <label>@Html.DisplayNameFor(model => model.CompanyPhoneNumber)</label>
    <input type="text" class="form-control" asp-for="CompanyPhoneNumber" />
    <br />
    <label>@Html.DisplayNameFor(model => model.CompanyEmail)</label>
    <input type="text" class="form-control" asp-for="CompanyEmail" />
    <br />
    <label>Marka Vitrinde Gözüksün ?</label>
    <select asp-for="CompanyStatus" class="form-control">
        <option class="form-control" value="True">Evet</option>
        <option class="form-control" value="False">Hayır</option>
    </select>
    <br />
    <button class="btn btn-block btn-primary">Kaydet</button>
</form>

