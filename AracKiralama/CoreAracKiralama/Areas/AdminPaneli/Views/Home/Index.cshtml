@model CoreAracKiralama.Areas.AdminPaneli.Models.Statistics
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>

    <!-- Custom Theme files -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- //chart -->
</head>
<body>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#1abc9c">
                <div class="icon-text">
                    <h3>@Model.CompanyCount</h3>
                    <p>Toplam Firma Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#2ecc71">

                <div class="icon-text">
                    <h3>@Model.BrandCount</h3>
                    <p>Toplam Marka Sayısı</p>

                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#3498db">
                <div class="icon-text">
                    <h3>@Model.VehicleCount</h3>
                    <p>Toplam Araç Sayısı</p>

                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#9b59b6">
                <div class="icon-text">
                    <h3>@Model.AvailableVehicleCount</h3>
                    <p>Müsait Araç Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#16a085">
                <div class="icon-text">
                    <h5 style="color:white; font-weight:bolder">@Model.LatestCompany</h5>
                    <p>En son Eklenen Firma</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#27ae60">
                <div class="icon-text">
                    <h3>@Model.LatestBrand</h3>
                    <p>En son Eklenen Marka</p>

                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#2980b9">
                <div class="icon-text">
                    <h3>@Model.LatestVehicle</h3>
                    <p>En son Eklenen Araç</p>

                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#8e44ad">

                <div class="icon-text">
                    <h3>@Model.NeedtoServices</h3>
                    <p>Bakıma giden araç</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>


    <div class="clearfix"></div>

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#f1c40f">
                <div class="icon-text">
                    <h3>@Model.MinPriceVehicle</h3>
                    <p>Min Fiyatlı Araç</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#e67e22">

                <div class="icon-text">
                    <h3>@Model.MaxPriceVehicle</h3>
                    <p>Max Fiyatlı Araç</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#e74c3c">

                <div class="icon-text">
                    <h3>@Model.AveragePriceVehicle ₺</h3>
                    <p>Ortalama Fiyat</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#95a5a6">

                <div class="icon-text">
                    <h3>@Model.TotalPriceVehicle ₺</h3>
                    <p>Tüm araçların </p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#f39c12">
                <div class="icon-text">
                    <h3>@Model.AutoGearVehicle</h3>
                    <p>Otomatik Araç Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color:#d35400">

                <div class="icon-text">
                    <h3>@Model.ManuelGearVehicle</h3>
                    <p>Manuel Araç Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#c0392b">

                <div class="icon-text">
                    <h3>@Model.GasolineVehicle</h3>
                    <p>Benzinli Araç Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color:#7f8c8d">

                <div class="icon-text">
                    <h3>@Model.DieselVehicle</h3>
                    <p>Dizel Araç Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            <br />
            <br />
        </div>
    </div>
</body>
</html>