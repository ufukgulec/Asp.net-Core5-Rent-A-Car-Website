@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@model IPagedList<Vehicle>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <!--Brands Begin-->
                    <div class="sidebar__item">
                        <h4>Firmalar</h4>
                        <ul>
                            @foreach (var item in @ViewBag.Companies as List<Company>)
                            {
                                <li><a asp-action="Index" asp-route-search="@item.CompanyName">@item.CompanyName <span style="color:gray">(@item.Vehicles.Count)</span></a></li>
                            }
                        </ul>
                    </div>
                    <div class="sidebar__item">
                        <h4>Markalar</h4>
                        <ul>
                            @foreach (var item in @ViewBag.Brands as List<Brand>)
                            {
                                <li><a asp-route-search="@item.BrandName">@item.BrandName <span style="color:gray">(@item.Vehicles.Count)</span></a></li>
                            }
                        </ul>
                    </div>

                    <!--Brands End-->
                    <!--Side Filter Begin-->
                    <div class="sidebar__item">
                        <h4>Ücret</h4>
                        <div class="price-range-wrap">
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                 data-min="@ViewBag.minamount" data-max="@ViewBag.maxamount">
                                <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            </div>
                            <div class="range-slider">
                                <div class="price-input">
                                    <form asp-controller="Vehicle" asp-action="Index">
                                        <input type="text" name="minamount" id="minamount">
                                        <input type="text" name="maxamount" id="maxamount">
                                        <input type="submit" id="sliderButton" class="btn btn-danger btn-block" value="Ara">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sidebar__item sidebar__item__color--option">
                        <h4>Kullanım</h4>
                        <div class="sidebar__item__color sidebar__item__color--white">
                            <a asp-route-search="seyahat">
                                <label for="white">
                                    İş/seyahat

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__color sidebar__item__color--gray">
                            <a asp-route-search="Vip">
                                <label for="gray">
                                    Vip

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__color sidebar__item__color--red">
                            <a asp-route-search="spor">
                                <label for="red">
                                    Spor

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__color sidebar__item__color--black">
                            <a asp-route-search="arazi">
                                <label for="black">
                                    Arazi

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__color sidebar__item__color--blue">
                            <a asp-route-search="ticari">
                                <label for="blue">
                                    Ticari

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__color sidebar__item__color--green">
                            <a asp-route-search="motor">
                                <label for="green">
                                    Motorsiklet

                                </label>
                            </a>
                        </div>
                    </div>
                    <div class="sidebar__item">
                        <h4>Yakıt</h4>
                        <div class="sidebar__item__size">
                            <a asp-route-search="benzin">
                                <label for="medium">
                                    Benzin

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__size">
                            <a asp-route-search="dizel">
                                <label for="medium">
                                    Dizel

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__size">
                            <a asp-route-search="lpg">
                                <label for="medium">
                                    Lpg

                                </label>
                            </a>
                        </div>
                        <div class="sidebar__item__size">
                            <a asp-route-search="elektrik">
                                <label for="medium">
                                    Elektrik

                                </label>
                            </a>
                        </div>
                    </div>
                    <!--Side Filter End-->
                    <!--Latest Product Begin-->
                    <div class="sidebar__item">
                        <div class="latest-product__text">
                            <h4>Son Eklenenler</h4>
                            <div class="latest-product__slider owl-carousel">
                                <div class="latest-prdouct__slider__item">
                                    <h4>Araçlar</h4>
                                    @foreach (var item in @ViewBag.LatestVehicles as List<Vehicle>)
                                    {
                                        <a href="#" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="@item.VehicleImgUrl" alt="@item.VehicleName" style="width:110px; height:110px">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@item.Brand.BrandName @item.VehicleName</h6>
                                                <span>@item.VehiclePrice ₺</span>
                                            </div>
                                        </a>
                                    }
                                </div>
                                <div class="latest-prdouct__slider__item">
                                    <h4>Firmalar</h4>
                                    @foreach (var item in ViewBag.LatestCompanies as List<Company>)
                                    {
                                        <a href="#" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="@item.CompanyLogoUrl" alt="@item.CompanyName" style="width:110px; height:110px">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@item.CompanyName</h6>
                                                <span><i class="fa fa-phone"></i> @item.CompanyPhoneNumber</span>
                                            </div>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Latest Product End-->
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <!--SALE OFF Begin-->
                <div class="product__discount">

                    <div class="section-title product__discount__title">
                        <h2>Fırsat</h2>
                    </div>
                    <div class="row">
                        <div class="product__discount__slider owl-carousel">
                            @foreach (var item in ViewBag.CheapestVehicles as List<Vehicle>)
                            {
                                <div class="col-lg-4">
                                    <div class="product__discount__item">
                                        <div class="product__discount__item__pic set-bg"
                                             data-setbg="@item.VehicleImgUrl">
                                            <div class="product__discount__percent">-20%</div>
                                            <ul class="product__item__pic__hover">
                                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__discount__item__text">
                                            <span>@item.Company.CompanyName</span>
                                            <h5><a href="#">@item.Brand.BrandName @item.VehicleName</a></h5>
                                            @{var price = item.VehiclePrice + item.VehiclePrice / 5;}
                                            <div class="product__item__price">@item.VehiclePrice ₺ <span> @price.ToString("0.00")</span></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!--SALE OFF End-->
                <!--Filter Begin-->
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sıralama Türü</span>
                                <select>
                                    <option value="0">Eklenme Tarihi</option>
                                    <option value="0">İsim</option>
                                    <option value="0">Ücret</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@Model.Count</span> Uygun araç bulundu</h6>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Filter End-->
                <!--Products Begin-->
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@item.VehicleImgUrl">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <small style="color:gray">@item.Company.CompanyName</small>
                                    <h6><a href="#">@item.Brand.BrandName @item.VehicleName</a></h6>
                                    <h5>@item.VehiclePrice</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!--Products End-->
                <!--Paged buttons Begin-->
                <div class="pagination justify-content-center">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LiElementClasses = new string[] { "page-item" }, PageClasses = new string[] { "page-link" } })
                </div>
                <!--Paged buttons End-->
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->